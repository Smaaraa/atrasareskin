---
import Homepage from "../components/Homepage.astro";
import image from "../images/hero_img.png";
const { pageTitle } = Astro.props;

let allImages = { large: [image.src], medium: [], small: [] };
let allAlts = [];
let allUrls = [];
const imageSizes = {
  width: {
    large: 1920,
    medium: 1280,
    small: 854,
  },
  height: {
    large: 1080,
    medium: 720,
    small: 480,
  },
};
---

{
  allImages.large.length > 0 ? (
    <Homepage
      title={pageTitle}
      images={allImages}
      alt={JSON.stringify(allAlts)}
      urls={JSON.stringify(allUrls)}
      width={imageSizes.width}
      height={imageSizes.height}
    />
  ) : (
    <p>No images found</p>
  )
}
